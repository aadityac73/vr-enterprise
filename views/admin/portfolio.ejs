<%- include('../partials/header'); -%>

<div class="container admin">
  <p class="text-center mt-n4"><a href="/admin/client" class="nav-btn btn btn-lg btn-dark"><strong>Portfolio</strong> / Clients</a></p>
  <div class="row">
    <div class="col"> </div>
    <div class="col-10 col-sm-8 col-lg-5">
        <div class="card shadow-lg rounded-0 border-0 mt-4">
            <div class="card-body">
                <h2 class="card-title text-center">Add New Image</h2>
                <form class="needs-validation" action="/admin/portfolio" method="post" enctype="multipart/form-data" novalidate>
                    <div class="form-group">
                        <label>Caption</label>
                        <input class="form-control" type="text" name="caption" required autofocus>
                        <div class="invalid-feedback">
                            Please enter image caption.
                        </div>
                    </div>
                    <div class="custom-file mb-3">
                        <input type="file" name="image" class="custom-file-input" id="imageFile" required>
                        <label class="custom-file-label" for="imageFile">Image</label>
                        <div class="invalid-feedback">
                            Please select an image.
                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <button class="btn btn-md btn-dark btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col"> </div>
  </div>
</div>

<%- include('../partials/footer'); -%>