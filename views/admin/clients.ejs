<%- include('../partials/header'); -%>

<div class="container admin">
  <p class="text-center mt-n4"><a href="/admin/portfolio" class="nav-btn btn btn-lg btn-dark">Portfolio / <strong>Clients</strong></a></p>
  <div class="row">
    <div class="col"> </div>
    <div class="col-10 col-sm-8 col-lg-5">
        <div class="card shadow-lg rounded-0 border-0 mt-4">
            <div class="card-body">
                <h2 class="card-title text-center">Add New Client</h2>
                <form class="needs-validation" action="/admin/client" method="post" enctype="multipart/form-data" novalidate>
                    <div class="form-group">
                        <label>Client Name</label>
                        <input class="form-control" type="text" name="name" required autofocus>
                        <div class="invalid-feedback">
                            Please enter image caption.
                        </div>
                    </div>
                    <div class="custom-file mb-3">
                        <input type="file" name="logo" class="custom-file-input" id="imageFile" required>
                        <label class="custom-file-label" for="imageFile">Logo</label>
                        <div class="invalid-feedback">
                            Please select an image.
                        </div>
                    </div>
                    <div class="form-group">
                      <label>Image URLs seperated by comma</label>
                      <input class="form-control" type="text" name="images" required>
                      <div class="invalid-feedback">
                          Please enter image URL.
                      </div>
                  </div>
                    <div class="form-group mt-2">
                        <button class="btn btn-md btn-dark btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col"> </div>
  </div>
</div>

<%- include('../partials/footer'); -%>